@model List<Capstone.Web.Models.Park>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section2">
    @foreach (var park in Model)
    {
        <div class="tile">
            <a href="@Url.Action("Detail", "Home", new {id = park.imgName})">
               <img class="tilepic" src="~/Content/img/parks/@(park.imgName).jpg" />
</a>
            <div>
                <h3>@park.parkName</h3>
                <h4>@park.location</h4>
                <p>@park.summary</p>

            </div>
        </div>
    }

</div>
